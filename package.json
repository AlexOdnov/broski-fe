{
	"name": "broski-fe",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "vite preview",
		"build-only": "vite build",
		"type-check": "vue-tsc --build --force",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
		"format": "prettier --write src/",
		"lint:all": "npm run format && npm run lint && npm run type-check",
		"generate-api-local": "npx swagger-typescript-api -p ./src/api/swagger.yaml -o ./src/api -n generatedApi.ts --axios  --extract-request-params --extract-request-body --extract-enums && npm run format",
		"generate-api": "npx swagger-typescript-api -p https://brocoin.site/openapi.json -o ./src/api -n newGeneratedApi.ts --axios  --extract-request-params --extract-request-body --extract-enums && npm run format",
		"prepare": "husky install"
	},
	"dependencies": {
		"axios": "^1.7.4",
		"normalize.css": "^8.0.1",
		"pinia": "^2.1.7",
		"temporal-polyfill": "^0.2.5",
		"vue": "^3.4.29",
		"vue-i18n": "^10.0.1",
		"vue-router": "^4.3.3"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.8.0",
		"@tsconfig/node20": "^20.1.4",
		"@types/node": "^20.14.5",
		"@vitejs/plugin-vue": "^5.0.5",
		"@vitejs/plugin-vue-jsx": "^4.0.0",
		"@vue/eslint-config-prettier": "^9.0.0",
		"@vue/eslint-config-typescript": "^13.0.0",
		"@vue/tsconfig": "^0.5.1",
		"eslint": "^8.57.0",
		"eslint-plugin-vue": "^9.23.0",
		"husky": "^9.1.4",
		"lint-staged": "^15.2.9",
		"npm-run-all2": "^6.2.0",
		"prettier": "^3.2.5",
		"telegram-webapps": "^7.8.0",
		"typescript": "~5.4.0",
		"vite": "^5.3.1",
		"vue-tsc": "^2.0.21"
	},
	"lint-staged": {
		"*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --cache --fix  --ignore-path .gitignore",
		"*.src/": "prettier --write"
	}
}
